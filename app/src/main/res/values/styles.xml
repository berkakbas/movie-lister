<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ReleaseDateTextView">
        <item name="android:drawableStart">@drawable/ic_calendar_blue</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/text_color_60</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MovieTypeTextView">
        <item name="android:drawableStart">@drawable/ic_movie_blue</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/text_color_60</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DurationTextView">
        <item name="android:drawableStart">@drawable/ic_clock_blue</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/text_color_60</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MovieRatingTextView">
        <item name="android:drawableStart">@drawable/ic_star_white</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/rating_card_bg</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="SmallMovieRatingTextView">
        <item name="android:drawableStart">@drawable/ic_star_white</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/rating_card_bg</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="SeriesRatingTextView">
        <item name="android:drawableStart">@drawable/ic_star_white_small</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/rating_card_bg</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

</resources>